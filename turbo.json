{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    },
    "clean:cache": {
      "cache": false
    },
    "clean:deps": {
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**"],
      "cache": true
    },
    "@onglx/db#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "@onglx/ui#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "@onglx/ai#build": {
      "dependsOn": [
        "@onglx/shared#build"
      ],
      "outputs": ["dist/**"]
    },
    "@onglx/core#build": {
      "dependsOn": [
        "@onglx/db#build",
        "@onglx/shared#build"
      ],
      "outputs": ["dist/**"]
    },
    "@onglx/shared#build": {
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "@onglx/shared#test": {
      "dependsOn": ["@onglx/shared#build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "@onglx/db#test": {
      "dependsOn": ["@onglx/db#build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "@onglx/ui#test": {
      "dependsOn": ["@onglx/ui#build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "@onglx/ai#test": {
      "dependsOn": [
        "@onglx/ai#build",
        "@onglx/shared#build"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "@onglx/core#test": {
      "dependsOn": [
        "@onglx/core#build",
        "@onglx/db#build",
        "@onglx/shared#build"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "functions#test": {
      "dependsOn": [
        "@onglx/shared#build",
        "@onglx/db#build"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "web-app#test": {
      "dependsOn": [
        "@onglx/ui#build"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    }
  }
}