{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@onglx/ui/*": ["./src/*"],
      "@onglx/ui/shadcn/*": ["./src/shadcn/*"]
    },
    "lib": ["DOM", "ES2022", "DOM.Iterable"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "moduleDetection": "force"
  },
  "include": [".eslintrc.cjs", "src/**/*.ts", "src/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
} 