{
  "name": "@repo-db",
  "version": "0.0.1",
  "private": true,
  "description": "Database adapters for PostgreSQL and MongoDB",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./postgresql": {
      "types": "./dist/postgresql.d.ts",
      "import": "./dist/postgresql.mjs",
      "require": "./dist/postgresql.js"
    },
    "./mongodb": {
      "types": "./dist/mongodb.d.ts",
      "import": "./dist/mongodb.mjs",
      "require": "./dist/mongodb.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "clean": "pnpm clean:build && pnpm clean:cache && pnpm clean:deps",
    "clean:build": "rm -rf dist",
    "clean:cache": "rm -rf .turbo",
    "clean:deps": "rm -rf node_modules"
  },
  "dependencies": {
    "@repo-core": "workspace:^",
    "@repo-shared": "workspace:^",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "mongoose": "^8.16.4",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.0.14",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}